@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Pending Approval - ITI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS (from wwwroot) -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-5 text-center">
                    <h2 class="text-primary mb-4">Welcome to ITI</h2>
                    <h4 class="mb-3">Your account is awaiting admin approval.</h4>
                    <p class="text-muted">You will be able to access the system once approved.</p>
                    <a href="/Account/Login" class="btn btn-outline-primary mt-4">
                        <i class="bi bi-box-arrow-in-right"></i> Login as Different User
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS + Popper (from wwwroot) -->
    <script src="~/lib/dist/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
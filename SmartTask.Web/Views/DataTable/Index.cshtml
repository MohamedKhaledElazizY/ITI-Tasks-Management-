</div>


@section Scripts {
    <!--jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Then load moment.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/3.0.5/daterangepicker.min.js"></script>

    <!--  Bootstrap and DataTables scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>

    <script>
                $(document).ready(function () {
            // Initialize date range picker
            $('#dateRangeFilter').daterangepicker({
                autoUpdateInput: false,
                locale: {
                    cancelLabel: 'Clear',
                    format: 'DD/MM/YYYY'
                }
            });

            $('#dateRangeFilter').on('apply.daterangepicker', function(ev, picker) {
                $(this).val(picker.startDate.format('DD/MM/YYYY') + ' - ' + picker.endDate.format('DD/MM/YYYY'));
            });

            $('#dateRangeFilter').on('cancel.daterangepicker', function(ev, picker) {
                $(this).val('');
            });

            // Initialize DataTable with a variable to reference it later
            var table = $('#tblUsers').DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": "/DataTable/GetData",
                    "type": "GET",
                    "datatype": "json",
                    "data": function(d) {
                        // Add custom filter parameters
                        d.location = $('#locationFilter').val();
                        d.position = $('#positionFilter').val();

                        var dateRange = $('#dateRangeFilter').val();
                        if (dateRange) {
                            var dates = dateRange.split(' - ');
                            d.startDate = dates[0];
                            d.endDate = dates[1];
                        }

                        d.minSalary = $('#salaryRangeMin').val();
                        d.maxSalary = $('#salaryRangeMax').val();
                        d.minAge = $('#ageRangeMin').val();
                        d.maxAge = $('#ageRangeMax').val();

                        return d;
                    }
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    {
                        "targets": '_all',
                        "orderable": true,
                        "className": "dt-nowrap"
                    }
                ],
                "columns": [
                    {
                        "data": "name",
                        "name": "Name",
                        "autoWidth": true,
                        "render": function(data, type, row) {
                            return `<div class="d-flex align-items-center">
                                <div class="avatar me-2" style="width: 36px; height: 36px; background-color: #${Math.floor(Math.random()*16777215).toString(16).padStart(6, '0')}; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 1.1rem;">
                                    ${row.name.charAt(0).toUpperCase()}
                                </div>
                                <span style="font-size: 1.05rem;">${data}</span>
                            </div>`;
                        }
                    },
                    {
                        "data": "position",
                        "name": "Position",
                        "autoWidth": true,
                        "className": "multiline-cell",
                        "render": function(data) {
                            return `<span class="badge-position">${data.replace(/\n/g, '<br>')}</span>`;
                        }
                    },
                    {
                        "data": "location",
                        "name": "Location",
                        "autoWidth": true,
                        "render": function(data) {
                            return `<i class="fas fa-map-pin me-1" style="color: #f72585;"></i> ${data}`;
                        }
                    },
                    {
                        "data": "age",
                        "name": "Age",
                        "autoWidth": true,
                        "className": "text-center",
                        "render": function(data) {
                            return `<span style="font-size: 1.1rem;">${data}</span>`;
                        }
                    },
                    {
                        "data": "startDateString",
                        "name": "Start Date",
                        "autoWidth": true,
                        "render": function(data) {
                            return `<i class="far fa-calendar me-1" style="color: #4895ef;"></i> ${data}`;
                        }
                    },
                    {
                        "data": "salary",
                        "name": "Salary",
                        "autoWidth": true,
                        "className": "salary-highlight",
                        "render": function(data) {
                            return `<i class="fas fa-dollar-sign me-1" style="color: #4cc9f0;"></i> ${data.toLocaleString('en-US', {style: 'currency', currency: 'USD', minimumFractionDigits: 0, maximumFractionDigits: 0})}`;
                        }
                    }
                ],
                "language": {
                    "emptyTable": "<div class='text-center py-5'><i class='fas fa-database fa-4x mb-3' style='color: #6c757d;'></i><h4>No records found</h4><p class='text-muted'>Try adjusting your search or filter to find what you're looking for.</p></div>",
                    "processing": '<div class="spinner-border text-primary" style="width: 2rem; height: 2rem;" role="status"><span class="visually-hidden">Loading...</span></div> Processing...',
                    "search": "<i class='fas fa-search'></i>",
                    "lengthMenu": "Show _MENU_ <i class='fas fa-users'></i>",
                    "info": "Showing <span class='highlight-info'>_START_</span> to <span class='highlight-info'>_END_</span> of <span class='highlight-info'>_TOTAL_</span> entries",
                    "infoEmpty": "No entries to show",
                    "infoFiltered": "<span class='text-muted'>(filtered from _MAX_ total entries)</span>",
                    "paginate": {
                        "first": "<i class='fas fa-angle-double-left'></i>",
                        "last": "<i class='fas fa-angle-double-right'></i>",
                        "next": "<i class='fas fa-angle-right'></i>",
                        "previous": "<i class='fas fa-angle-left'></i>"
                    }
                },
                 "dom":
                        "<'row mb-3'<'col-md-8 d-flex align-items-center'<'dataTables_filter'f><'ms-2'<'#customFilter'>>>><'row'<'col-sm-12'tr>>" +
                        "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>"
        ,

                "initComplete": function() {
                    $('.dataTables_filter input').attr('placeholder', 'Search employees...');

                    this.api().columns().header().each(function(header) {
                        var title = $(header).text();
                        $(header).closest('table').find('tbody td').attr('data-label', title);
                    });
                }
            });

            // Load locations dropdown
            $.ajax({
                url: '/DataTable/GetLocations',
                type: 'GET',
                success: function(data) {
                    $.each(data, function(i, item) {
                        $('#locationFilter').append($('<option>', {
                            value: item,
                            text: item
                        }));
                    });
                }
            });

            // Load positions dropdown
            $.ajax({
                url: '/DataTable/GetPositions',
                type: 'GET',
                success: function(data) {
                    $.each(data, function(i, item) {
                        $('#positionFilter').append($('<option>', {
                            value: item,
                            text: item
                        }));
                    });
                }
            });

            // Apply filters button click
            $('#applyFilters').on('click', function() {
                table.ajax.reload();
            });

            // Reset filters button click
            $('#resetFilters').on('click', function() {
                $('#locationFilter').val('');
                $('#positionFilter').val('');
                $('#dateRangeFilter').val('');
                $('#salaryRangeMin').val('');
                $('#salaryRangeMax').val('');
                $('#ageRangeMin').val('');
                $('#ageRangeMax').val('');
                table.ajax.reload();
            });

        });
    </script>
}
                color: #000 !important;
                padding: 0.75rem 1rem !important;
                border-bottom: 1px solid #eee;
                transition: background 0.2s ease !important;
                text-decoration: none !important;
            }

                .header .dropdown-menu .card-body a:last-child,
                .header .dropdown-menu .noti-content a:last-child {
                    border-bottom: none;
                }

                .header .dropdown-menu .card-body a:hover,
                .header .dropdown-menu .noti-content a:hover {
                    background: var(--red-light) !important;
                    color: #000 !important;
                }

            .header .dropdown-menu .avatar i {
                color: var(--red-primary) !important;
            }

            .header .dropdown-menu .btn-light,
            .header .dropdown-menu .btn-primary {
                margin: 0.5rem 0.75rem !important;
                width: calc(50% - 0.75rem) !important;
                text-align: center;
            }


@model SmartTask.Web.ViewModels.ProjectVM.ProjectFormViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">📁 New Project</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter project name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="3" placeholder="Project details..."></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label fw-bold"></label>
                                <input asp-for="StartDate" id="startDate" class="form-control shadow-sm" type="date" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label fw-bold"></label>
                                <input asp-for="EndDate" id="endDate" class="form-control shadow-sm" type="date" />
                                <span id="endDateError" class="text-danger"></span>
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Branch</label>
                                    <select asp-for="SelectedBranchId" class="form-select shadow-sm" id="SelectedBranchId">
                                        <option value="">-- Select Branch --</option>
                                        @foreach (var branch in ViewBag.Branches)
                                        {
                                            <option value="@branch.Id">@branch.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Department</label>
                                    <select asp-for="SelectedDepartmentId" class="form-select shadow-sm" id="SelectedDepartmentId">
                                        <option value="">-- Select Department --</option>
                                    </select>
                                </div>
                            </div>

                        <div class="mb-4">
                            <label asp-for="OwnerId" class="form-label fw-bold"></label>
                            <select asp-for="OwnerId" id="ownerDropdown" class="form-select shadow-sm">
                                <option value="">Choose Owner</option>
                            </select>
                            <span asp-validation-for="OwnerId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Project" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle me-1"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        document.querySelector("form").addEventListener("submit", function (e) {
            const startDate = new Date(document.getElementById("startDate").value);
            const endDate = new Date(document.getElementById("endDate").value);
            const errorSpan = document.getElementById("endDateError");
            errorSpan.innerText = "";
            if (startDate && endDate && endDate < startDate) {
                e.preventDefault();
                errorSpan.innerText = "End date must be after start date.";
            }
        });

        $('#SelectedBranchId').on('change', function () {
            var branchId = $(this).val();
            $('#SelectedDepartmentId').empty().append('<option value="">-- Select Department --</option>');
            $('#ownerDropdown').empty().append('<option value="">Choose Owner</option>');
            if (branchId) {
                $.ajax({
                    url: '@Url.Action("GetDepartmentsByBranch", "Project")',
                    type: 'GET',
                    data: { branchId: branchId },
                    success: function (departments) {
                        $.each(departments, function (i, dept) {
                            $('#SelectedDepartmentId').append($('<option>', {
                                value: dept.id,
                                text: dept.name
                            }));
                        });
                    }
                });
            }
        });

        $('#SelectedDepartmentId').on('change', function () {
            var branchId = $('#SelectedBranchId').val();
            var departmentId = $(this).val();
            $('#ownerDropdown').empty().append('<option value="">Choose Owner</option>');
            if (branchId && departmentId) {
                $.ajax({
                    url: '@Url.Action("GetUsersByBranchAndDepartment", "Project")',
                    type: 'GET',
                    data: { branchId: branchId, departmentId: departmentId },
                    success: function (users) {
                        var $dropdown = $('#ownerDropdown');
                        $dropdown.empty();
                        if (users.length === 0) {
                            $dropdown.append('<option value="">No users found</option>');
                        } else {
                            $dropdown.append('<option value="">Choose Owner</option>');
                            $.each(users, function (i, user) {
                                $dropdown.append('<option value="' + user.id + '">' + user.fullName + '</option>');
                            });
                        }
                    }
                });
            }
        });

        $(document).ready(function () {
            var initialBranchId = $('#SelectedBranchId').val();
            var initialDepartmentId = $('#SelectedDepartmentId').val();
            var initialOwnerId = $('#ownerDropdown').val();
            if (initialBranchId) {

                $.ajax({
                    url: '@Url.Action("GetDepartmentsByBranch", "Project")',
                    type: 'GET',
                    data: { branchId: initialBranchId },
                    success: function (departments) {
                        $('#SelectedDepartmentId').empty().append('<option value="">-- Select Department --</option>');
                        $.each(departments, function (i, dept) {
                            var selected = (dept.id == initialDepartmentId) ? 'selected' : '';
                            $('#SelectedDepartmentId').append($('<option>', {
                                value: dept.id,
                                text: dept.name,
                                selected: selected
                            }));
                        });

                        if (initialDepartmentId) {
                            $.ajax({
                                url: '@Url.Action("GetUsersByBranchAndDepartment", "Project")',
                                type: 'GET',
                                data: { branchId: initialBranchId, departmentId: initialDepartmentId },
                                success: function (users) {
                                    var $dropdown = $('#ownerDropdown');
                                    $dropdown.empty();
                                    if (users.length === 0) {
                                        $dropdown.append('<option value="">No users found</option>');
                                    } else {
                                        $dropdown.append('<option value="">Choose Owner</option>');
                                        $.each(users, function (i, user) {
                                            var selected = (user.id == initialOwnerId) ? 'selected' : '';
                                            $dropdown.append('<option value="' + user.id + '" ' + selected + '>' + user.fullName + '</option>');
                                        });
                                    }
                                }
                            });
                        }
                    }
                });
            }
        });
    </script>
}


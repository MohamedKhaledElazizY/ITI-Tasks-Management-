@{
    ViewData["Title"] = "No Projects Found";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header text-white fw-bold" style="background-color: #dc3545;">
            <i class="bi bi-folder-x me-2"></i> No Projects Found
        </div>
        <div class="card-body text-center py-5" style="background-color: #fff3f3; font-family: 'Segoe UI', sans-serif;">
            <img src="/images/no-projects.jpg" alt="No Projects" class="mb-4" style="max-width: 180px;" />

            <p class=" text-danger fw-semibold">We couldn’t find any projects registered in the system.</p>

            <a asp-action="Index" asp-controller="Home" class="btn btn-danger mt-3 px-4 py-2 fw-semibold">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to Home
            </a>
        </div>
    </div>
</div>

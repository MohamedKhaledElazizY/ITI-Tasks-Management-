@using System.Security.Claims
@model SmartTask.Core.Models.ApplicationUser
@{
	Layout = "_Layout";
	var userId = User?.Claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier)?.Value;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Employee Dashboard</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
	<style>
		@@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

		* {
			font-family: 'Poppins', sans-serif;
		}

		body {
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			min-height: 100vh;
			position: relative;
			overflow-x: hidden;
		}

			body::before {
				content: '';
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%), radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.2) 0%, transparent 50%);
				pointer-events: none;
				z-index: -1;
			}

		.container {
			position: relative;
			z-index: 2;
		}

		.row .dashboard {
			z-index: 1;
		}

		.back-btn {
			width: 60px;
			height: 60px;
			background: linear-gradient(135deg, #ff6b6b, #ee5a24);
			border: none;
			border-radius: 20px;
			color: white;
			font-size: 1.5rem;
			display: flex;
			align-items: center;
			justify-content: center;
			box-shadow: 0 8px 25px rgba(238, 90, 36, 0.4);
			transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
			position: relative;
			overflow: hidden;
		}

			.back-btn::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
				transition: left 0.5s;
			}

			.back-btn:hover::before {
				left: 100%;
			}

			.back-btn:hover {
				transform: translateY(-3px) scale(1.05);
				box-shadow: 0 12px 35px rgba(238, 90, 36, 0.6);
			}

		.dashboard-title {
			background: linear-gradient(135deg, #667eea, #764ba2);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
			font-weight: 700;
			text-shadow: 0 0 30px rgba(102, 126, 234, 0.5);
			position: relative;
		}

			.dashboard-title::after {
				content: '';
				position: absolute;
				bottom: -10px;
				left: 50%;
				transform: translateX(-50%);
				width: 100px;
				height: 4px;
				background: linear-gradient(135deg, #667eea, #764ba2);
				border-radius: 2px;
			}

		.card.dashboard {
			opacity: 0;
			transform: translateY(50px) rotateX(10deg);
			transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
			border-radius: 25px;
			border: none;
			overflow: hidden;
			z-index: 1;
			background: rgba(255, 255, 255, 0.95);
			backdrop-filter: blur(20px);
			box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1), 0 0 0 1px rgba(255, 255, 255, 0.2);
			position: relative;
		}

			.card.dashboard::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 5px;
				background: linear-gradient(135deg, #667eea, #764ba2);
				border-radius: 25px 25px 0 0;
			}

		.card.visible.dashboard {
			opacity: 1;
			transform: translateY(0) rotateX(0deg);
		}

		.card.dashboard:hover {
			transform: translateY(-10px) scale(1.03);
			box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(255, 255, 255, 0.3);
		}

		.card-img-placeholder {
			height: 200px;
			background-size: cover;
			background-position: center;
			border-top-left-radius: 25px;
			border-top-right-radius: 25px;
			display: flex;
			align-items: center;
			justify-content: center;
			overflow: hidden;
			position: relative;
		}

			.card-img-placeholder::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
				backdrop-filter: blur(10px);
			}

		#card-1 .card-img-placeholder {
			background: linear-gradient(135deg, #667eea, #764ba2);
		}

		#card-3 .card-img-placeholder {
			background: linear-gradient(135deg, #f093fb, #f5576c);
		}

		.card-img-placeholder[data-branch] {
			background: linear-gradient(135deg, #4facfe, #00f2fe);
		}

		.card-img-placeholder[data-department] {
			background: linear-gradient(135deg, #43e97b, #38f9d7);
		}

		.card-img-placeholder[data-projects] {
			background: linear-gradient(135deg, #fa709a, #fee140);
		}

		.card-img-placeholder[data-tasks] {
			background: linear-gradient(135deg, #a8edea, #fed6e3);
		}

		.card-img-placeholder[data-notification] {
			background: linear-gradient(135deg, #ff9a9e, #fecfef);
		}

		.card-img-placeholder[data-outlook] {
			background: linear-gradient(135deg, #a18cd1, #fbc2eb);
		}

		.card-img-placeholder[data-project] {
			background: linear-gradient(135deg, #ffecd2, #fcb69f);
		}

		.card-img-placeholder[data-progress] {
			background: linear-gradient(135deg, #89f7fe, #66a6ff);
		}

		.card-icon {
			font-size: 4rem;
			color: white;
			z-index: 2;
			position: relative;
			transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
		}

		.card.dashboard:hover .card-icon {
			transform: scale(1.2) translateY(-5px) rotateY(10deg);
			filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.3));
		}

		.card-body {
			padding: 1.5rem;
			position: relative;
		}

		.card-title {
			font-weight: 600;
			font-size: 1.2rem;
			color: #2c3e50;
			margin-bottom: 1rem;
			text-align: center;
		}

		.arrow-btn {
			width: 50px;
			height: 50px;
			padding: 0;
			font-size: 1.5rem;
			display: flex;
			align-items: center;
			justify-content: center;
			background: linear-gradient(135deg, #667eea, #764ba2);
			color: #fff;
			border: none;
			border-radius: 15px;
			box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
			transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
			position: relative;
			overflow: hidden;
		}

			.arrow-btn::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
				transition: left 0.5s;
			}

			.arrow-btn:hover::before {
				left: 100%;
			}

			.arrow-btn:hover {
				background: linear-gradient(135deg, #764ba2, #667eea);
				transform: scale(1.1) translateY(-2px);
				box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
			}

		a.arrow-btn {
			text-decoration: none;
		}

		.btn-icon {
			transition: all 0.3s ease;
		}

			.btn-icon:hover i {
				color: white !important;
			}

		/* Floating particles animation */
		.particles {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			pointer-events: none;
			z-index: 1;
		}

		.particle {
			position: absolute;
			width: 4px;
			height: 4px;
			background: rgba(255, 255, 255, 0.6);
			border-radius: 50%;
			animation: float 6s infinite ease-in-out;
		}

		@@keyframes float {
			0%, 100% {
				transform: translateY(0px) rotate(0deg);
				opacity: 0;
			}
			50% {
				transform: translateY(-100px) rotate(180deg);
				opacity: 1;
			}
		}

		/* Staggered animation delay for cards */
		.card.dashboard:nth-child(1) {
			animation-delay: 0.1s;
		}

		.card.dashboard:nth-child(2) {
			animation-delay: 0.2s;
		}

		.card.dashboard:nth-child(3) {
			animation-delay: 0.3s;
		}

		.card.dashboard:nth-child(4) {
			animation-delay: 0.4s;
		}

		.card.dashboard:nth-child(5) {
			animation-delay: 0.5s;
		}

		.card.dashboard:nth-child(6) {
			animation-delay: 0.6s;
		}

		/* Responsive adjustments */
		@@media (max-width: 768px) {
			.card-icon {
				font-size: 3rem;
			}
			.card-img-placeholder {
				height: 150px;
			}
		}

		/* Loading shimmer effect */
		.card.dashboard:not(.visible) {
			background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
			background-size: 200% 100%;
			animation: shimmer 1.5s infinite;
		}

		@@keyframes shimmer {
			0% {
				background-position: -200% 0;
			}
			100% {
				background-position: 200% 0;
			}
		}
	</style>
</head>
<body>
	<!-- Floating particles -->
	<div class="particles">
		<div class="particle" style="left: 10%; animation-delay: 0s;"></div>
		<div class="particle" style="left: 20%; animation-delay: 1s;"></div>
		<div class="particle" style="left: 30%; animation-delay: 2s;"></div>
		<div class="particle" style="left: 40%; animation-delay: 3s;"></div>
		<div class="particle" style="left: 50%; animation-delay: 4s;"></div>
		<div class="particle" style="left: 60%; animation-delay: 5s;"></div>
		<div class="particle" style="left: 70%; animation-delay: 0s;"></div>
		<div class="particle" style="left: 80%; animation-delay: 1s;"></div>
		<div class="particle" style="left: 90%; animation-delay: 2s;"></div>
	</div>

	<div class="container py-5">
		<a asp-controller="Home" asp-action="Index"
		   class="btn btn-icon back-btn rounded-circle p-0 d-flex align-items-center justify-content-center mb-4"
		   title="Home">
			<i class="bi bi-arrow-left"></i>
		</a>

		<h2 class="text-center mb-5 dashboard-title">Employee Dashboard</h2>

		<div class="row dashboard g-4 justify-content-center">
			<div class="col-md-4">
				<div class="card shadow dashboard" id="card-1">
					<div class="card-img-placeholder">
						<i class="bi bi-person-circle card-icon"></i>
					</div>
					<div class="card-body">
						<h5 class="card-title">My Account</h5>
						<a class="btn arrow-btn ms-auto d-block" asp-controller="User" asp-action="Details" asp-route-id="@userId">
							<i class="bi bi-arrow-right"></i>
						</a>
					</div>
				</div>
			</div>

			<secure-content asp-area="" asp-controller="Calendar" asp-action="Index">
				<div class="col-md-4">
					<div class="card dashboard shadow" id="card-3">
						<div class="card-img-placeholder">
							<i class="bi bi-calendar-event card-icon"></i>
						</div>
						<div class="card-body">
							<h5 class="card-title">Calendar</h5>
							<a class="btn arrow-btn ms-auto d-block" asp-controller="Calendar" asp-action="Index">
								<i class="bi bi-arrow-right"></i>
							</a>
						</div>
					</div>
				</div>
			</secure-content>

			<secure-content asp-area="" asp-action="Details" asp-controller="Branch">
				<div class="col-md-4">
					<div class="card dashboard shadow">
						<div class="card-img-placeholder" data-branch>
							<i class="bi bi-building-fill card-icon" ></i>
						</div>
						<div class="card-body">
							<h5 class="card-title">My Branch</h5>
							<a class="btn arrow-btn ms-auto d-block" asp-controller="Branch" asp-action="Details" asp-route-id="@Model.BranchId">
								<i class="bi bi-arrow-right"></i>
							</a>
						</div>
					</div>
				</div>
			</secure-content>

			<secure-content asp-area="" asp-action="Details" asp-controller="Department">
				<div class="col-md-4">
					<div class="card dashboard shadow">
						<div class="card-img-placeholder" data-department>
							<i class="bi bi-diagram-3 card-icon"></i>
						</div>
						<div class="card-body">
							<h5 class="card-title">My Department</h5>
							<a class="btn arrow-btn ms-auto d-block" asp-controller="Department" asp-action="Details" asp-route-id="@Model.DepartmentId">
								<i class="bi bi-arrow-right"></i>
							</a>
						</div>
					</div>
				</div>
			</secure-content>

			<secure-content asp-area="" asp-action="BranchManagerProjects" asp-controller="Manager">
				<div class="col-md-4">
					<div class="card dashboard shadow">
						<div class="card-img-placeholder" data-projects>
							<i class="bi bi-kanban card-icon"></i>
						</div>
						<div class="card-body">
							<h5 class="card-title">Managed Projects</h5>
							<a class="btn arrow-btn ms-auto d-block" asp-controller="Manager" asp-action="BranchManagerProjects">
								<i class="bi bi-arrow-right"></i>
							</a>
						</div>
					</div>
				</div>
			</secure-content>

			<div class="col-md-4">
				<div class="card dashboard shadow">
					<div class="card-img-placeholder" data-tasks>
						<i class="bi bi-check2-square card-icon"></i>
					</div>
					<div class="card-body">
						<h5 class="card-title">My Tasks</h5>
						<a class="btn arrow-btn ms-auto d-block" asp-controller="Task" asp-action="KanbanForUser">
							<i class="bi bi-arrow-right"></i>
						</a>
					</div>
				</div>
			</div>

			<div class="col-md-4">
				<div class="card dashboard shadow">
					<div class="card-img-placeholder" data-notification>
						<i class="bi bi-bell card-icon"></i>
					</div>
					<div class="card-body">
						<h5 class="card-title">Notification</h5>
						<a class="btn arrow-btn ms-auto d-block" asp-controller="Notification" asp-action="Index">
							<i class="bi bi-arrow-right"></i>
						</a>
					</div>
				</div>
			</div>

			<div class="col-md-4">
				<div class="card dashboard shadow">
					<div class="card-img-placeholder" data-outlook>
						<i class="bi bi-envelope card-icon"></i>
					</div>
					<div class="card-body">
						<h5 class="card-title">Outlook</h5>
						<a class="btn arrow-btn ms-auto d-block" asp-controller="Outlook" asp-action="Index">
							<i class="bi bi-arrow-right"></i>
						</a>
					</div>
				</div>
			</div>

			@if (Model.ProjectMemberships is not null)
			{
				@foreach (var proj in Model.ProjectMemberships)
				{
					<div class="col-md-4">
						<div class="card dashboard shadow">
							<div class="card-img-placeholder" data-project>
								<i class="bi bi-folder card-icon"></i>
							</div>
							<div class="card-body">
								<h5 class="card-title">@proj.Project.Name</h5>
								<a class="btn arrow-btn ms-auto d-block" asp-controller="Project" asp-action="Details" asp-route-id="@proj.ProjectId">
									<i class="bi bi-arrow-right"></i>
								</a>
							</div>
						</div>
					</div>
				}
			}

			<div class="col-md-4">
				<div class="card dashboard shadow">
					<div class="card-img-placeholder" data-progress>
						<i class="bi bi-graph-up card-icon"></i>
					</div>
					<div class="card-body">
						<h5 class="card-title">Project Progress</h5>
						<a class="btn arrow-btn ms-auto d-block" asp-controller="ProjectProgress" asp-action="Index">
							<i class="bi bi-arrow-right"></i>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
	<script>
		$(document).ready(function () {
			// Staggered card animation
			$(".card.dashboard").each(function (index) {
				const card = $(this);
				setTimeout(function () {
					card.addClass("visible");
				}, index * 150);
			});

			// Dynamic particle generation
			function createParticle() {
				const particle = $('<div class="particle"></div>');
				const startPos = Math.random() * 100;
				const animationDuration = Math.random() * 3 + 3;

				particle.css({
					'left': startPos + '%',
					'animation-duration': animationDuration + 's',
					'opacity': Math.random() * 0.5 + 0.2
				});

				$('.particles').append(particle);

				setTimeout(() => {
					particle.remove();
				}, animationDuration * 1000);
			}

			// Generate particles periodically
			setInterval(createParticle, 2000);

			// Add smooth scroll behavior
			$('a[href^="#"]').on('click', function(event) {
				var target = $(this.getAttribute('href'));
				if( target.length ) {
					event.preventDefault();
					$('html, body').stop().animate({
						scrollTop: target.offset().top
					}, 1000);
				}
			});

			// Enhanced hover effects
			$('.card.dashboard').hover(
				function() {
					$(this).find('.card-icon').addClass('animate__pulse');
				},
				function() {
					$(this).find('.card-icon').removeClass('animate__pulse');
				}
			);
		});
	</script>
</body>
</html>
@model SmartTask.Web.ViewModels.BranchVM.AssignUsersToBranchViewModel

@{
    ViewData["Title"] = "Assign Users to Branch";
}

<form asp-action="AssignUsers" method="post">
    <input type="hidden" asp-for="BranchId" />

    <div class="form-group mb-5">
        <label asp-for="SelectedUserIds">Users</label>
        <select asp-for="SelectedUserIds" asp-items="ViewBag.Users" class="form-select select2" multiple="multiple"
                data-placeholder="-- Select Users --">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Assign Selected Users</button>
</form>

<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/select2/js/select2.min.js"></script>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "-- Select Users --",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
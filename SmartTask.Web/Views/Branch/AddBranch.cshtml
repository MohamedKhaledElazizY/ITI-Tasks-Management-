@model SmartTask.Web.ViewModels.BranchVM.BranchFormViewModel

@{
    ViewData["Title"] = "Add Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .add-branch-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .add-branch-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(44, 62, 80, 0.08);
        padding: 2.5rem 2rem;
        margin-bottom: 2rem;
        border: 1px solid #f0f0f0;
    }

        .add-branch-card label {
            font-weight: 500;
            color: #c1272c;
            margin-bottom: 0.3rem;
        }

        .add-branch-card .form-control,
        .add-branch-card .form-select {
            border-radius: 8px;
            border: 1px solid #e0e0e0;
            box-shadow: none;
            transition: border-color 0.2s;
        }

            .add-branch-card .form-control:focus,
            .add-branch-card .form-select:focus {
                border-color: #c1272c;
                box-shadow: 0 0 0 2px rgba(193, 39, 44, 0.08);
            }

        .add-branch-card .select2-container--default .select2-selection--multiple {
            border-radius: 8px;
            border: 1px solid #e0e0e0;
            min-height: 38px;
        }

        .add-branch-card .btn-danger {
            background: linear-gradient(90deg, #c1272c 0%, #ee3633 100%);
            border: none;
            border-radius: 8px;
            font-weight: 600;
            padding: 0.6rem 2.2rem;
            transition: background 0.2s;
        }

            .add-branch-card .btn-danger:hover {
                background: linear-gradient(90deg, #ee3633 0%, #c1272c 100%);
            }

        .add-branch-card .text-danger {
            font-size: 0.95rem;
        }

        .add-branch-card .form-actions {
            margin-top: 2.5rem;
            text-align: center;
        }
</style>

<div class="container mt-4 add-branch-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-plus-circle fa-2x text-success me-2"></i>
            <h3 class="mb-0">Add New Branch</h3>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="add-branch-card">
        <form asp-action="AddBranch" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ManagerId" class="form-label">Manager</label>
                <select asp-for="ManagerId" class="form-select select2" asp-items="ViewBag.Managers">
                    <option value="">Select a Manager</option>
                </select>
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedDepartmentIds">Departments</label>
                <select asp-for="SelectedDepartmentIds" asp-items="ViewBag.Departments" class="form-select select2" multiple="multiple"
                        data-placeholder="-- Select Departments --">
                </select>


                <span asp-validation-for="SelectedDepartmentIds" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-save me-1"></i> Save Branch
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
            $(document).ready(function () {
            $('#SelectedDepartmentIds').select2({
                    tags: true,
                    placeholder: "-- Select Departments --",
                    allowClear: true,
                    width: '100%',
                });
            });

        $(document).ready(function () {
        $('#ManagerId').select2({
                placeholder: "-- Select Manager --",
                allowClear: true,
                width: '100%',
            });
        });
	</script>
}

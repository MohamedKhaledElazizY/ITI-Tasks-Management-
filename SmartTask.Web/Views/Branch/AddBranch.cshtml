@model SmartTask.Web.ViewModels.BranchVM.BranchFormViewModel

@{
    ViewData["Title"] = "AddBranch";
}

<h1>AddBranch</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBranch" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ManagerId">Manager</label>
                <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.Managers">
                    <option value="">Select a Manager</option>
                </select>
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedDepartmentIds">Departments</label>
                <select asp-for="SelectedDepartmentIds" asp-items="ViewBag.Departments" class="form-select select2" multiple="multiple"
                        data-placeholder="-- Select Departments --">
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Add Branch</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/select2/js/select2.min.js"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
            $(document).ready(function () {
                $('#userDropdown').select2({
                    tags: true,
                    placeholder: "-- Select Departments --",
                    allowClear: true,
                    width: '100%',
                });
            });
	</script>
}

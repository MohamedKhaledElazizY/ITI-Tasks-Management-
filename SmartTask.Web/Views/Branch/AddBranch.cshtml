@model SmartTask.Web.ViewModels.BranchVM.BranchFormViewModel

@{
    ViewData["Title"] = "AddBranch";
}

<h1>AddBranch</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBranch" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ManagerId">Manager</label>
                <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.Managers">
                    <option value="">Select a Manager</option>
                </select>
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedDepartmentIds">Departments</label>
                <select asp-for="SelectedDepartmentIds" class="form-control" asp-items="ViewBag.Departments" multiple>
                </select>
            </div>

            <button type="submit" name="submit" class="btn btn-primary">Add Branch</button>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

   

}

@model SmartTask.Web.ViewModels.BranchVM.BranchFormViewModel

@{
    ViewData["Title"] = "Add Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-plus-circle fa-2x text-success me-2"></i>
            <h3 class="mb-0">Add New Branch</h3>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm p-4">
        <form asp-action="AddBranch" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ManagerId" class="form-label">Manager</label>
                <select asp-for="ManagerId" class="form-select" asp-items="ViewBag.Managers">
                    <option value="">Select a Manager</option>
                </select>
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SelectedDepartmentIds" class="form-label">Department</label>
                <select asp-for="SelectedDepartmentIds" class="form-select" asp-items="ViewBag.Departments" multiple="multiple">
                </select>


                <span asp-validation-for="SelectedDepartmentIds" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-1"></i> Save Branch
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model SmartTask.Web.ViewModels.EditUserViewModel

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ExistingImagePath" />

    <!-- Full Name -->
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <!-- Email (Read Only) -->
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <!-- Department -->
    @*<div class="form-group">
        <label asp-for="DepartmentId">Department</label>
        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BranchId">Branch</label>
        <select asp-for="BranchId" class="form-control"
                asp-items="ViewBag.Branchs">
            <option value="">-- Select branch --</option>
        </select>
        <span asp-validation-for="BranchId" class="text-danger"></span>
    </div>*@
    <div class="form-group">
        <label asp-for="BranchId">Branch</label>
        <select asp-for="BranchId" class="form-control"
                asp-items="ViewBag.Branchs" id="branchSelect">
            <option value="">-- Select branch --</option>
        </select>
        <span asp-validation-for="BranchId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId">Department</label>
        <select asp-for="DepartmentId" class="form-control"
                asp-items="ViewBag.Departments" id="departmentSelect" disabled>
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <!-- Current Image -->
    @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
    {
        <div class="form-group">
            <label>Current Image:</label><br />
            <img src="@Model.ExistingImagePath" alt="User Image" style="max-width:150px;" />
        </div>
    }

    <!-- Upload New Image -->
    <div class="form-group">
        <label asp-for="ImageFile">Upload New Image</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    @* <hr /> *@
    @* <h4>Change Password</h4> *@

    <div class="form-group">
        <label asp-for="CurrentPassword"></label>
        <input asp-for="CurrentPassword" class="form-control" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#branchSelect').change(function () {
                var branchId = $(this).val();
                console.log(branchId);
                if (branchId) {
                    $.ajax({
                        url: '/User/GetDepartmentsByBranch',
                        type: 'GET',
                        data: { branchId: branchId },
                        success: function (departments) {
                            var departmentSelect = $('#departmentSelect');
                            departmentSelect.empty(); // Clear old options
                            departmentSelect.append('<option value="">-- Select Department --</option>');

                            $.each(departments, function (i, department) {
                                    console.log(department.id+""+department.name);
                                departmentSelect.append(`<option value="${department.id}">${department.name}</option>`);
                            });

                            departmentSelect.prop('disabled', false);
                        },
                        error: function () {
                            alert("There is an error when loading depts.");
                        }
                    });
                } else {
                    $('#departmentSelect').empty().append('<option value="">-- Select Department --</option>').prop('disabled', true);
                }
            });
        });
    </script>
}
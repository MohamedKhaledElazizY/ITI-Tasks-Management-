@model SmartTask.Core.Models.ApplicationUser


<style>
    /* Main container */
    .user-details-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    /* Fixed header styling */
    .page-header {
        color: #d9534f;
        margin-bottom: 2rem;
        font-weight: 600;
        font-size: 1.8rem;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .icon-wrapper {
        background-color: #d9534f;
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .header-text {
        display: inline-block;
    }

    /* Details card styling */
    .details-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        padding: 2rem;
    }

    /* Detail row styling */
    .detail-row {
        display: flex;
        padding: 1rem 0;
        border-bottom: 1px solid #eee;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        flex: 0 0 200px;
        font-weight: 600;
        color: #555;
    }

    .detail-value {
        flex: 1;
        color: #333;
    }

    /* Button styling */
    .btn-back {
        background-color: #6c757d;
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 4px;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
    }

        .btn-back:hover {
            background-color: #5a6268;
            color: white;
            text-decoration: none;
        }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .detail-row {
            flex-direction: column;
        }

        .detail-label {
            margin-bottom: 0.5rem;
        }

        .page-header {
            font-size: 1.5rem;
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }

        .icon-wrapper {
            width: 40px;
            height: 40px;
            font-size: 1.2rem;
        }
    }
</style>

